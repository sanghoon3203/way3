<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title || 'Dashboard' %> - Way3 Admin</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom Admin CSS -->
    <link href="/admin/css/admin.css" rel="stylesheet">

    <%- typeof additionalCSS !== 'undefined' ? additionalCSS : '' %>
</head>
<body class="admin-body">
    <div class="admin-wrapper d-flex">
        <!-- Sidebar -->
        <%- include('../partials/sidebar') %>

        <!-- Main Content -->
        <div class="admin-content flex-grow-1">
            <!-- Header -->
            <%- include('../partials/header') %>

            <!-- Page Content -->
            <main class="admin-main p-4">
                <!-- Alert Messages -->
                <div id="alertContainer"></div>

                <!-- Page Title -->
                <% if (typeof pageTitle !== 'undefined') { %>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3 mb-0"><%- pageTitle %></h1>
                    <% if (typeof pageActions !== 'undefined') { %>
                    <div class="page-actions">
                        <%- pageActions %>
                    </div>
                    <% } %>
                </div>
                <% } %>

                <!-- Main Content -->
                <%- body %>
            </main>

            <!-- Footer -->
            <%- include('../partials/footer') %>
        </div>
    </div>

    <!-- Toast Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="bi bi-info-circle me-2"></i>
                <strong class="me-auto">알림</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body"></div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/admin/js/admin.js"></script>
    <%- typeof additionalJS !== 'undefined' ? additionalJS : '' %>

    <script>
        // 전역 알림 함수
        window.showToast = function(message, type = 'info') {
            const toast = document.getElementById('liveToast');
            const toastBody = toast.querySelector('.toast-body');
            const toastIcon = toast.querySelector('.bi');

            toastBody.textContent = message;

            // 아이콘 변경
            toastIcon.className = 'bi me-2 ' + (type === 'success' ? 'bi-check-circle text-success' :
                                                type === 'error' ? 'bi-exclamation-triangle text-danger' :
                                                'bi-info-circle text-info');

            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
        };
    </script>
</body>
</html>