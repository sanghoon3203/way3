<%- include('layouts/main', {
    title: '대시보드',
    pageTitle: '대시보드',
    currentPath: '/admin',
    breadcrumbs: [],
    additionalCSS: `
        <style>
            .stat-card {
                transition: transform 0.2s, box-shadow 0.2s;
            }
            .stat-card:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }
            .stat-icon {
                font-size: 2rem;
                opacity: 0.8;
            }
            .chart-container {
                height: 300px;
            }
            .activity-item {
                border-left: 3px solid #dee2e6;
                transition: border-color 0.2s;
            }
            .activity-item:hover {
                border-left-color: #0d6efd;
            }
            .activity-item.new {
                border-left-color: #198754;
            }
            .activity-item.error {
                border-left-color: #dc3545;
            }
            .activity-item.warning {
                border-left-color: #ffc107;
            }
        </style>
    `,
    additionalJS: `<script src="/admin/js/dashboard.js"></script>`
}) { %>

<!-- 시스템 상태 개요 -->
<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-success d-flex align-items-center" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <div>
                <strong>시스템 정상 운영 중</strong> - 모든 서비스가 정상적으로 작동하고 있습니다.
            </div>
        </div>
    </div>
</div>

<!-- 통계 카드 -->
<div class="row mb-4">
    <!-- 전체 상인 수 -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-shop stat-icon text-primary"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="text-muted small">전체 상인</div>
                    <div class="h4 mb-0" id="totalMerchants">-</div>
                    <div class="text-success small">
                        <i class="bi bi-arrow-up"></i>
                        <span id="merchantsGrowth">-</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 활성 퀘스트 수 -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-flag stat-icon text-warning"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="text-muted small">활성 퀘스트</div>
                    <div class="h4 mb-0" id="activeQuests">-</div>
                    <div class="text-info small">
                        <i class="bi bi-arrow-right"></i>
                        <span id="questsStatus">-</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 등록된 스킬 수 -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-lightning stat-icon text-success"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="text-muted small">등록된 스킬</div>
                    <div class="h4 mb-0" id="totalSkills">-</div>
                    <div class="text-secondary small">
                        <i class="bi bi-circle-fill"></i>
                        <span id="skillsCategory">-</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 활성 플레이어 수 -->
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card stat-card h-100">
            <div class="card-body d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="bi bi-people stat-icon text-info"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <div class="text-muted small">활성 플레이어</div>
                    <div class="h4 mb-0" id="activePlayers">-</div>
                    <div class="text-success small">
                        <i class="bi bi-person-plus"></i>
                        <span id="playersOnline">-</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 차트 및 활동 로그 -->
<div class="row">
    <!-- 활동 차트 -->
    <div class="col-lg-8 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-graph-up me-2"></i>
                    일일 활동 통계
                </h5>
                <div class="btn-group btn-group-sm" role="group">
                    <input type="radio" class="btn-check" name="chartPeriod" id="chart7days" checked>
                    <label class="btn btn-outline-primary" for="chart7days">7일</label>

                    <input type="radio" class="btn-check" name="chartPeriod" id="chart30days">
                    <label class="btn btn-outline-primary" for="chart30days">30일</label>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="activityChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- 최근 활동 -->
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock-history me-2"></i>
                    최근 활동
                </h5>
                <a href="/admin/monitoring" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body p-0">
                <div id="activityLog" style="max-height: 280px; overflow-y: auto;">
                    <!-- 활동 로그가 여기에 동적으로 추가됩니다 -->
                    <div class="p-3 text-center text-muted">
                        <i class="bi bi-hourglass-split"></i>
                        <div class="small">활동 로그를 불러오는 중...</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 빠른 액션 및 상태 -->
<div class="row">
    <!-- 빠른 액션 -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning-charge me-2"></i>
                    빠른 액션
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-6">
                        <a href="/admin/merchants/create" class="btn btn-outline-primary w-100">
                            <i class="bi bi-plus-circle me-1"></i>
                            새 상인
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="/admin/quests/create" class="btn btn-outline-warning w-100">
                            <i class="bi bi-flag me-1"></i>
                            새 퀘스트
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="/admin/skills/create" class="btn btn-outline-success w-100">
                            <i class="bi bi-lightning me-1"></i>
                            새 스킬
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="/admin/media" class="btn btn-outline-info w-100">
                            <i class="bi bi-image me-1"></i>
                            미디어 업로드
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 시스템 상태 -->
    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-cpu me-2"></i>
                    시스템 상태
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="text-center">
                            <div class="text-muted small">CPU 사용률</div>
                            <div class="h5 mb-1" id="cpuUsage">-</div>
                            <div class="progress" style="height: 4px;">
                                <div class="progress-bar bg-info" id="cpuProgress" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center">
                            <div class="text-muted small">메모리 사용률</div>
                            <div class="h5 mb-1" id="memoryUsage">-</div>
                            <div class="progress" style="height: 4px;">
                                <div class="progress-bar bg-warning" id="memoryProgress" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-6">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted small">데이터베이스</span>
                            <span class="text-success small" id="dbStatus">
                                <i class="bi bi-circle-fill"></i> 연결됨
                            </span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted small">업타임</span>
                            <span class="text-info small" id="systemUptime">-</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% } %>